.chat-main__content-box{data: {message: {id: message.id}}}
  .chat-main__content-box__info
    .chat-main__content-box__info-name
      = message.user.name
    .chat-main__content-box__info-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__content-box__message
    - if message.content.present?
      %p.chat-main__content-box__message__text
        = message.content
    = image_tag message.image.url, class: 'chat-main__content-box__message__image' if message.image.present?